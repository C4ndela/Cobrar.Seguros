<EditForm Model="poliza" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">

        <label>Nro. Poliza</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.nroPoliza" />
        </div>

        <label>Nombre Empresa</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.empresaAseguradora" />
        </div>

        <label>vigencia Poliza</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.vigenciaPoliza" />
        </div>

        <label>periodo Poliza</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.periodoPoliza" />
        </div>

        <label>vencimiento Factura</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.vencimientoFactura" />
        </div>

         <label>Estado</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@poliza.Estado" />
        </div>

    </div>

    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>

</EditForm>


@code {

    [Parameter] public Poliza poliza { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
